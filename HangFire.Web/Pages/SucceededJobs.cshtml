@* Generator: Template TypeVisibility: Internal *@
@using System
@using System.Linq
@using HangFire.Web.Pages
@inherits WebTemplateBase
              
@{
    Layout = new LayoutPage()
        {
            Context = Context,
            Title = "Succeeded Jobs"
        };
}

<div class="alert alert-info">
    HangFire хранит последние 100 успешно выполненных  заданий в очереди <code>hangfire:succeeded</code> 
    для более простой отладки работы фоновых задач.
</div>

@{
    var succeededJobs = Storage.SucceededJobs();
}

@if (succeededJobs.Count == 0)
{
    <div class="alert alert-warning">
        <p>
        Список завершенных заданий пуст.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Queue</th>
                <th>Args</th>
                <th>Succeeded at</th>
                <th>Latency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in succeededJobs)
            {
                <tr>
                    <td>@job.Type</td>
                    <td><span class="label label-primary">@job.Queue</span></td>
                    <td>
                        <code>
                            @String.Join(", ", job.Args.Select(x => String.Format("{0}: \"{1}\"", x.Key, x.Value)))
                        </code>
                    </td>
                    <td>@job.SucceededAt</td>
                    <td>@job.Latency</td>
                </tr>
            }
        </tbody>
    </table>
}